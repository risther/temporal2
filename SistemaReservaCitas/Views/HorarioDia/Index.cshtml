@model List<SistemaReservaCitas.Models.HorarioAtencionDia>
@{
    ViewBag.Title = "Index";
}



<h2 class="card-header">

    <a href="~/HorarioDia/AgregarEditar/1" class="btn btn-info float-right">Nuevo Dia</a>
</h2>



<br />
<table id="DatatableP" class="table">
    <thead>
        <tr>
            <th>ID Atencion Dia </th>
            <th>DIA</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.horarioAtencionDia_id)</td>
                <td>@(m.dia)</td>
                <td style="align-content:center">

                    <a href="~/HorarioDiaDetalle/Index/@m.horarioAtencionDia_id" class="btn btn-primary">Editar Horas</a>
                    <a href="~/HorarioDia/AgregarEditar/@m.horarioAtencionDia_id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
